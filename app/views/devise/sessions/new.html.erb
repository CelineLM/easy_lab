<div class="wrapper d-flex flex-column align-items-center mt-5">
<div class= "col-md-6 col-sm-12" >
  <h2 class="text-center mb-3">Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                  required: false, label: "Mot de passe",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable?%>
  </div>


  <div class="form-actions button-wrapper">
    <%= f.button :submit, "Se connecter", class: "button-blue-small" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>