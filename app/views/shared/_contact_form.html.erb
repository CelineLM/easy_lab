<%= form_for @contact, url: home_index_path, remote: true do |f| %>
    <div class="col-md-6">
        <%= f.label :nom %></br>
        <%= f.text_field  :name, required: true %></br>

        <%= f.label :email %></br>
        <%= f.text_field :email, required: true %></br>

      <%= f.label :message %></br>
      <%= f.text_area :message, rows: 8, cols: 40, required: true,
                        placeholder: "Ã‰crivez votre message ici"%>

      <%= f.submit 'Envoyer', class: 'button-blue' %>
    </div>
  <% end %>
  <div class="col-md-6" id="flash-message">
    <%= render 'shared/flash' %>
  </div>